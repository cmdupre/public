<Window x:Class="SatComSimulator.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="450"
        Width="800">
    <Grid>
        <StackPanel>
            <Button Height="20"
                    Content="Listen" 
                    Command="{Binding ListenCommand}"/>
            <Button Height="20"
                    Content="Scenario One" 
                    Command="{Binding RunScenarioOneCommand}"/>
            <Button Height="20"
                    Content="Scenario Two" 
                    Command="{Binding RunScenarioTwoCommand}"/>
            <Button Height="20"
                    Content="Scenario Three"
                    Command="{Binding RunScenarioThreeCommand}" />
        </StackPanel>
    </Grid>
</Window>
